<% if (@companies.empty?) %>
  <strong><font color="red" size="12px">Nenhuma Empresa Encontrado</font></strong>
<% else %>
	<table id="tableData1" class="hover row-border">
		<thead>
			<tr>
				<th>
					<center><font color="BLACK"><strong>Nome da Empresa</strong></font></center>
				</th>
				<th>
					<center><font color="BLACK"><strong>Gasto Total na Empresa (R$)</strong></font></center>
				</th>
			</tr>
		</thead>
		<tbody>
		<% entity = 0
		   expense = 1
		@companies.each do |company| %>
		  	<tr>
			  	<td>
			  		<center><%= link_to company[entity].name, company_path(company[entity].id) %></center>
			  	</td>
			  	<td>	
			  		<center><%= company[expense] %></center>
			  	</td>
		  	</tr>
		<% end %>
		</tbody>
	</table>
<% end %>
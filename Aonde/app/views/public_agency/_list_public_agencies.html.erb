<!-- table to show the data of public agencies -->
<table id="tableData" class="hover row-border">
	<thead>
		<tr>
			<th>
				<center><font color="white"><strong>Nome do Órgão</strong></font></center>
			</th>
			<th>
				<center><font color="white"><strong>Quantidade de visualizações</strong></font></center>
			</th>
			<th>
				<center><font color="white"><strong>Gasto total (R$)</strong></font></center>
			</th>
		</tr>
	</thead>

	<tbody>
	<% @public_agencies.each do |agency| %>
	  	<tr>
		  	<td>
		  	<center><%= link_to agency.name,public_agency_path(agency.id)%></center>
		  	</td>
		  	<td>
		  		<center><%= agency.views_amount %></center>
		  	</td>
		  	<td>
		  	<!-- <%=  number_with_precision(expenses_public_agency(agency.id), :delimiter => ".", :separator => ",", :precision => 2)%> -->
		  	<center><%= expenses_public_agency(agency.id) %> 
		  	<!--<%= number_to_currency(expenses_public_agency(agency.id))%>--></center>
		  	</td>
	  	</tr>
	<% end %>
	</tbody>
</table>